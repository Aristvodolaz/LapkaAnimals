<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <ImageView
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:id="@+id/back_arrow"
        android:src="@drawable/back_arrow"/>
    <TextView
        android:textColor="@color/black"
        android:layout_marginLeft="16sp"
        android:textSize="16sp"
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите название объявления"/>

    <EditText
        android:id="@+id/name_ads"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8sp"
        android:hint="Введите значение"
        android:textSize="14sp"/>


    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Описание"/>

    <EditText
        android:id="@+id/opisanie"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8sp"
        android:hint="Введите значение"
        android:textSize="14sp"/>

    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Стоимость основной услуги"/>

    <EditText
        android:id="@+id/price"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8sp"
        android:hint="Введите значение"
        android:textSize="14sp"/>

    <TextView
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16sp"
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Место оказания услуги"/>

    <EditText
        android:id="@+id/address"
        android:layout_marginLeft="8sp"
        android:layout_marginRight="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8sp"
        android:hint="Введите значение"
        android:textSize="14sp"/>

    <TextView
        android:layout_marginLeft="16sp"
        android:layout_marginTop="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Фотография"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <FrameLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/add_photo"
        android:layout_gravity="start"
        android:layout_width="160dp"
        android:background="@drawable/background_for_add_photo"
        android:layout_height="120dp"
        android:gravity="center">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/camera_image"
                android:paddingTop="8dp"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/camera"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:id="@+id/visable_image"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_check_24"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/text"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Добавить фото"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginBottom="4sp"
        android:stateListAnimator="@null"
        android:id="@+id/next_btn"
        android:textColor="@color/white"
        android:layout_marginTop="24sp"
        android:background="@drawable/blue_btn"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Опубликовать"/>
</LinearLayout>